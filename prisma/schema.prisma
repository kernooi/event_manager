generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid()) @db.Uuid
  email     String    @unique
  passwordHash String
  passwordSalt String
  createdAt DateTime  @default(now())
  events    Event[]   @relation("EventOwner")
  checkIns  CheckIn[] @relation("CheckInScanner")
  sessions  Session[]
}

model Event {
  id        String     @id @default(uuid()) @db.Uuid
  ownerId   String     @db.Uuid
  owner     User       @relation("EventOwner", fields: [ownerId], references: [id])
  name      String
  startAt   DateTime?
  endAt     DateTime?
  location  String?
  createdAt DateTime   @default(now())
  invites   Invite[]
  attendees Attendee[]
  checkIns  CheckIn[]
  registrationFields RegistrationField[]
}

model Invite {
  id        String       @id @default(uuid()) @db.Uuid
  eventId   String       @db.Uuid
  event     Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  token     String       @unique
  email     String?
  status    InviteStatus @default(CREATED)
  expiresAt DateTime?
  usedAt    DateTime?
  createdAt DateTime     @default(now())
  attendee  Attendee?
}

model Attendee {
  id           String   @id @default(uuid()) @db.Uuid
  eventId      String   @db.Uuid
  event        Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  inviteId     String?  @unique @db.Uuid
  invite       Invite?  @relation(fields: [inviteId], references: [id], onDelete: SetNull)
  token        String   @unique
  fullName     String
  email        String?
  phone        String?
  age          Int?
  gender       Gender   @default(PREFER_NOT_TO_SAY)
  dietary      Dietary  @default(NONE)
  table        String?
  registeredAt DateTime @default(now())
  checkedInAt  DateTime?
  checkIns     CheckIn[]
  answers      RegistrationAnswer[]
}

model CheckIn {
  id         String   @id @default(uuid()) @db.Uuid
  attendeeId String   @db.Uuid
  attendee   Attendee @relation(fields: [attendeeId], references: [id], onDelete: Cascade)
  eventId    String   @db.Uuid
  event      Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  scannedBy  String   @db.Uuid
  scanner    User     @relation("CheckInScanner", fields: [scannedBy], references: [id])
  scannedAt  DateTime @default(now())
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model RegistrationField {
  id        String    @id @default(uuid()) @db.Uuid
  eventId   String    @db.Uuid
  event     Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  label     String
  type      FieldType
  required  Boolean   @default(false)
  options   Json?
  order     Int       @default(0)
  createdAt DateTime  @default(now())
  answers   RegistrationAnswer[]
}

model RegistrationAnswer {
  id         String            @id @default(uuid()) @db.Uuid
  attendeeId String            @db.Uuid
  attendee   Attendee          @relation(fields: [attendeeId], references: [id], onDelete: Cascade)
  fieldId    String            @db.Uuid
  field      RegistrationField @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  value      Json?
  createdAt  DateTime          @default(now())

  @@unique([attendeeId, fieldId])
}

enum InviteStatus {
  CREATED
  SENT
  USED
}

enum Dietary {
  NONE
  VEGETARIAN
  VEGAN
  HALAL
  OTHER
}

enum Gender {
  FEMALE
  MALE
  NON_BINARY
  OTHER
  PREFER_NOT_TO_SAY
}

enum FieldType {
  TEXT
  NUMBER
  DROPDOWN
  CHECKBOX
}
